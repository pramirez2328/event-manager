{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost", // You can name it as you want
      "type": "pwa-chrome", // Use the built-in debugger type
      "request": "launch",
      "url": "http://localhost:4200", // URL for your Angular app
      "webRoot": "${workspaceFolder}", // Root folder of your project
      "sourceMaps": true // Enable source maps for TypeScript debugging
    },
    {
      "name": "Launch Edge against localhost", // Optional: for Edge browser
      "type": "pwa-msedge", // Built-in Edge debugger
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}
